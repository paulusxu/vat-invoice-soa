    <id column="UUID" property="uuid"/>
    <id column="CustomerName" property="customerName"/>
    <id column="LenovoID" property="lenovoID"/>
    <id column="InvoiceType" property="invoiceType"/>
    <id column="PayManType" property="payManType"/>
